{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
            "label": "RESET JEST TEST AND GET COVERAGE SUMMARY",
            "type": "shell",
            "command": "pwsh ./developmentSupportAndScripts/resetAndInitiateJestCoverageTest.ps1",
            "problemMatcher": []
        },
		{
            "label": "RESET JEST TEST AND OPEN COVERAGE REPORT",
            "type": "shell",
            "command": "pwsh ./developmentSupportAndScripts/resetAndRunCoverageReport.ps1",
            "problemMatcher": []
        },
	]
}
